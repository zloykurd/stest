<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#65446d"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <ImageView
            android:id="@+id/frag_imageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/frag_let"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/accimg"
            android:padding="10dp" />

        <TextView
            android:id="@+id/frag_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/frag_imageView"
            android:padding="15dp"
            android:text="Account name"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#fff" />

        <TextView

            android:id="@+id/frag_quest"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/frag_name"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#fff"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/frag_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/frag_quest"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="категория"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/tvlqdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/frag_quest"
            android:layout_alignTop="@+id/frag_category"
            android:padding="15dp"
            android:text="date"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/frag_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/frag_imageView"
            android:padding="10dp"
            android:text="№334"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#fff" />

        <ImageView
            android:id="@+id/frag_let"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_above="@+id/frag_quest"
            android:layout_marginBottom="15dp"
            android:layout_toLeftOf="@+id/frag_num"
            android:layout_toStartOf="@+id/frag_num"
            android:background="#b1bb59"
            android:padding="10dp"
            android:src="@android:drawable/stat_notify_chat" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/top"
        android:background="#ffffff"></RelativeLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/enterpage"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="developer.zloykurd.sarafankg.LogInActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="46dp"
        android:src="@drawable/helpbubble" />

    <TextView
        android:id="@+id/textViewACName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="124dp"
        android:text="SARAFAN.KG"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="false"
        android:layout_below="@+id/textViewACName"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="20dp"
        android:text="Вход"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/etenter_number"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:layout_alignWithParentIfMissing="false"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#f1ecec"
        android:editable="false"
        android:ems="10"
        android:foregroundGravity="center"
        android:gravity="center_vertical|center|center_horizontal"
        android:hint="   Номер телефона "
        android:inputType="phone"
        android:textAlignment="center"
        android:textColorHint="#09051d"
        android:textSize="12dp" />

    <EditText
        android:id="@+id/enterpassword_enter"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:layout_below="@+id/etenter_number"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:allowUndo="false"

        android:background="#f1ecec"
        android:editable="false"
        android:ems="10"
        android:gravity="center"
        android:hint="  Пароль"
        android:hyphenationFrequency="normal"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColorHint="#09051d"
        android:textSize="12dp" />

    <Button
        android:id="@+id/buttonEnter"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_below="@+id/enterpassword_enter"
        android:layout_marginTop="-8dp"
        android:background="#35b5eb"
        android:text="Войти"
        android:textColor="#ffffff"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/tvmisspassword_enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonEnter"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:text="Забыли пароль?"
        android:textColor="#ffffff"
        android:textSize="13dp" />

    <Button
        android:id="@+id/reg_button_enter"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_alignLeft="@+id/enterpassword_enter"
        android:layout_alignStart="@+id/enterpassword_enter"
        android:layout_below="@+id/tvmisspassword_enter"
        android:layout_marginTop="80dp"
        android:background="#ffda44"
        android:text="РЕГИСТРАЦИЯ" />



</RelativeLayout>
